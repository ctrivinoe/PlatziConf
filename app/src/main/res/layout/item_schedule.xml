<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvItemScheduleHour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:gravity="right|bottom"
                    android:textSize="@dimen/itemScheduleTittle"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvItemScheduleHourAMPM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A.M."
                    android:gravity="right|bottom"
                    android:textSize="@dimen/itemScheduleSubTittle"
                    android:textColor="@color/colorPrimary">

                </TextView>

            </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/tvItemScheduleConferenceName"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre de la conferencia"
                    android:textColor="@color/colorPrimaryDark"
                    android:ellipsize="end"
                    android:lines="1"
                />
                <TextView
                    android:id="@+id/tvItemScheduleConferenceSpeaker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Speaker name"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimary"
                    android:ellipsize="end"
                    android:lines="1"
                />
                <TextView
                    android:id="@+id/tvItemScheduleTag"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="tag"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="#FFFFFF"
                />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>